@model List<ProjtModel.Models.PessoaViewModel>;


@{
    ViewData["Title"] = "ExibirListaPessoaView";
}

<h1> Lista de Pessoas</h1>

<table class="table">
    <thead>
        <tr class="table-primary">
            <th>ID</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Departamento</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (PessoaViewModel item in Model)
        {       
        <tr>
            <td>@item.IdPessoa</td>
            <td>@item.Nome</td>
            <td>@item.Email</td>
            <td>@item.Departamento</td>
        </tr>
        }
        }
    </tbody>
    <tfoot>
    </tfoot>


</table>
    

